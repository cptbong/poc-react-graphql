{
  "extends": ["tslint-config-airbnb"],
  "rules": {
    "max-line-length": false,
    "max-classes-per-file": false,
    "variable-name": [false, "check-format"],
    "import-name": false,
    "no-duplicate-imports": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
